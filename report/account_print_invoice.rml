  <story>
  <pto>
    <para style="terp_default_8">[[ repeatIn(objects,'o') ]]</para>
    <para style="terp_default_8">[[ setLang(o.partner_id.lang) ]]</para>
    <pto_header><!-- Must be after setLang() -->
    <blockTable colWidths="220.0,90.0,60.0,80.0,80.0" style="Table7">
      <tr>
        <td><para style="terp_tblheader_Details"><b>Description</b></para></td>
        <td><para style="terp_tblheader_Details"><b>Taxes</b></para></td>
        <td><para style="terp_tblheader_Details_Right"><b>Quantity</b></para></td>
        <td><para style="terp_tblheader_Details_Right"><b>Unit Price</b></para></td>
        <td><para style="terp_tblheader_Details_Right"><b>Price</b></para></td>
      </tr>
    </blockTable>
    </pto_header>
    <blockTable colWidths="297.0,233.0" style="Table_Partner_Address">
      <tr>
        <td>
          <para style="terp_default_8"> <font color="white"> </font> </para>
        </td>
        <td>
          <para style="terp_default_8">[[ (o.partner_id and o.partner_id.title and o.partner_id.title.name) or '' ]] [[ (o.partner_id and o.partner_id.name) or '' ]]</para>
          <para style="terp_default_8">[[ (o.heading_partner_id and o.heading_partner_id.title and o.heading_partner_id.title.name) or '' ]] [[ (o.heading_partner_id and o.heading_partner_id.name) or '' ]]</para>
          <para style="terp_default_8">[[ display_address(o.heading_partner_id or o.partner_id) ]]</para>
          <para style="terp_default_8">UID: [[ (o.journal_id.code in ['SAU', 'SAUCN'] and o.partner_id.vat) or removeParentNode('para') ]]</para> <!-- FIXME: hack for one customer -->
          <para style="terp_default_8">Partita IVA: [[ (o.journal_id.code not in ['SAU', 'SAUCN'] and o.partner_id.vat) or removeParentNode('para') ]]</para>
          <para style="terp_default_8">Codice Fiscale: [[ (o.partner_id.fiscalcode) or removeParentNode('para') ]]</para>
        </td>
      </tr>
    </blockTable>
    <para style="terp_header"><b>Invoice [[ ((o.type == 'out_invoice' and (o.state == 'open' or o.state == 'paid')) or removeParentNode('para')) and '' ]] [[ tweakNumber(o.number) ]]</b></para>
    <para style="terp_header"><b>PRO-FORMA [[ ((o.type == 'out_invoice' and o.state == 'proforma2') or removeParentNode('para')) and '' ]]</b></para>
    <para style="terp_header"><b>Draft Invoice [[ ((o.type == 'out_invoice' and o.state == 'draft') or removeParentNode('para')) and '' ]]</b></para>
    <para style="terp_header"><b>Cancelled Invoice [[ ((o.type == 'out_invoice' and o.state == 'cancel') or removeParentNode('para')) and '' ]] [[ o.number ]]</b></para>
    <para style="terp_header"><b>Refund [[ (o.type=='out_refund' or removeParentNode('para')) and '' ]] [[ o.number ]]</b></para>
    <para style="terp_header"><b>Supplier Refund [[ (o.type=='in_refund' or removeParentNode('para')) and '' ]] [[ o.number ]]</b></para>
    <para style="terp_header"><b>Supplier Invoice [[ (o.type=='in_invoice' or removeParentNode('para')) and '' ]] [[ o.number ]]</b></para>
    <para style="terp_default_8">
      <font color="white"> </font>
    </para>

    <para style="terp_default_9">
      &#0160;
      [[ o.company_id.partner_id.city ]], [[ formatLang(o.date_invoice, date=True) ]]
      &#0160;
    </para>

    <para style="terp_default_9">
      [[ o.project_id and format(o.project_id.analytic_account_id.name) ]]
      [[ o.project_id.description and format(o.project_id.description) ]]
      [[ ', '.join([x for x in [format(o.project_id.location or ''), format(o.project_id.free_text_date or '')] if x]) ]]
    </para>

    <spacer length="10"/>

    <para style="terp_default_9">[[ (o.comment and formatBreakline(o.comment)) or removeParentNode('para') ]]
      &#0160;
    </para>

    <section>
      <para style="terp_default_9">
        [[ (o.state != 'paid' and o.payment_term and format(o.payment_term.note)) or removeParentNode('para') ]]
      </para>
      <para style="terp_default_9">
        [[ (o.state != 'paid' and o.date_due != 'False' and (format("Due date:") + ' ' + formatLang(o.date_due, date=True))) or removeParentNode('para') ]]
      </para>
      <para style="terp_default_9">
        [[ (o.state != 'paid' and o.partner_bank_id and '&#0160;') or removeParentNode('para') ]]
        [[ format(o.partner_bank_id.bank_name) ]]
        [[ format('BIC/SWIFT') + ': ' + format(o.partner_bank_id.bank_bic) ]]
        [[ format('IBAN') + ': ' + format(o.partner_bank_id.acc_number) ]]
      </para>
      <para style="terp_default_9">
        [[ (o.state == 'paid' and format('Pagato - Paid') or removeParentNode('para')) ]]
      </para>
      <para style="terp_default_9">
        [[ (o.with_fiscal_stamp and format(u'Bollo €2,00 assolto su originale') or removeParentNode('para')) ]]
      </para>
      <para style="terp_default_9">
        [[ (o.with_split_payment and format(u'Scissione dei Pagamenti') or removeParentNode('para')) ]]
      </para>
      &#0160;
    </section>

    <spacer length="10"/>

    <blockTable colWidths="220.0,90.0,60.0,80.0,80.0" style="Table7">
      <tr>
        <td><para style="terp_tblheader_Details"><b>Description</b></para></td>
        <td><para style="terp_tblheader_Details"><b>Taxes</b></para></td>
        <td><para style="terp_tblheader_Details_Right"><b>Quantity</b></para></td>
        <td><para style="terp_tblheader_Details_Right"><b>Unit Price</b></para></td>
        <td><para style="terp_tblheader_Details_Right"><b>Price</b></para></td>
      </tr>
    </blockTable>
    <section>
      <para style="terp_default_2">[[ repeatIn(o.invoice_line,'l') ]]</para>
      <blockTable colWidths="220.0,90.0,60.0,80.0,80.0" style="Table8">
        <tr>
          <td>
            <para style="terp_default_9">[[ format(l.name) ]]</para>
          </td>
          <td>
            <para style="terp_default_9">[[ ', '.join([ lt.tax_code_id.name or '' for lt in l.invoice_line_tax_id ]) ]]</para>
          </td>
          <td>
            <para style="terp_default_Right_9">[[ formatLang(l.quantity)]] [[ (l.uos_id and l.uos_id.name) or '' ]]</para>
          </td>
          <td>
            <para style="terp_default_Right_9">[[ formatLang(l.price_unit, dp='Account', currency_obj=o.currency_id) ]]</para>
          </td>
          <td>
            <para style="terp_default_Right_9">[[ formatLang(l.price_subtotal, dp='Account', currency_obj=o.currency_id) ]]</para>
          </td>
        </tr>
      </blockTable>
    </section>
    <blockTable colWidths="0.0,450.0,80.0" style="Table10">
      <tr>
        <td>
          <para style="terp_default_8">
            <font color="white"> </font>
          </para>
        </td>
        <td>
          <para style="terp_default_Right_9">Net Total:</para>
        </td>
        <td>
          <para style="terp_default_Right_9">[[ formatLang(o.amount_untaxed, digits=get_digits(dp='Account'), currency_obj=o.currency_id) ]]</para>
        </td>
      </tr>
    </blockTable>
    <para style="Text body">
      <font color="white"> </font>
    </para>
    <blockTable colWidths="205.0,71.0,71.0,183.0" style="Table9">
      <tr>
        <td>
          <para style="terp_tblheader_Details"><b>Tax [[ o.tax_line==[] and removeParentNode('blockTable') ]]</b></para>
        </td>
        <td>
          <para style="terp_tblheader_Details_Right"><b>Base </b></para>
        </td>
        <td>
          <para style="terp_tblheader_Details_Right"><b>Amount </b></para>
        </td>
        <td>
          <para style="terp_default_8">
            <font color="white"> </font>
          </para>
        </td>
      </tr>
    </blockTable>
    <section>
      <para style="terp_default_2">[[ repeatIn(o.tax_line,'t') ]]</para>
      <blockTable colWidths="205.0,71.0,71.0,184.0" style="Table2">
        <tr>
          <td>
            <para style="terp_default_8">[[ t.tax_code_id.name ]]</para>
          </td>
          <td>
            <para style="terp_default_Right_8">[[ formatLang(t.base, dp='Account', currency_obj=o.currency_id) ]]</para>
          </td>
          <td>
            <para style="terp_default_Right_8">[[ (t.tax_code_id and t.tax_code_id.notprintable) and removeParentNode('blockTable') or '' ]] [[ formatLang(t.amount, digits=get_digits(dp='Account'), currency_obj=o.currency_id) ]]</para>
          </td>
          <td>
            <para style="terp_default_8">
              <font color="white"> </font>
            </para>
          </td>
        </tr>
      </blockTable>
   </section>

  <spacer length="20"/>

   <section>
     <blockTable colWidths="370,80.0,80.0" style="Table10">
       <tr>
         <td>
           <para style="terp_default_8">
             <font color="white"> </font>
           </para>
         </td>
         <td>
           <para style="terp_default_Right_9"><b>Total:</b></para>
         </td>
         <td>
           <para style="terp_default_Bold_Right_9"><b>[[ formatLang(o.amount_total, digits=get_digits(dp='Account'), currency_obj=o.currency_id) ]]</b></para>
         </td>
       </tr>

       <tr>
         <td>
           <para style="terp_default_8">
             <font color="white">[[ (o.with_split_payment and format('-') or removeParentNode('tr')) ]]</font>
           </para>
         </td>
         <td>
           <para style="terp_default_Right_9"><b>Total due:</b></para>
         </td>
         <td>
           <para style="terp_default_Bold_Right_9"><b>[[ formatLang(o.amount_total_due, digits=get_digits(dp='Account'), currency_obj=o.currency_id) ]]</b></para>
         </td>
       </tr>
     </blockTable>
   </section>

    <blockTable colWidths="120.0,410.0" style="Table1">
      <tr>
        <td>
          <para style="terp_default_Bold_9"><b>Fiscal Position Remark : </b></para>
        </td>
        <td>
          <para style="terp_default_9">[[ (o.fiscal_position and o.fiscal_position.note and format(o.fiscal_position.note)) or removeParentNode('blockTable') ]]</para>
        </td>
      </tr>
    </blockTable>
    <para style="terp_default_2">
      <font color="white"> </font>
    </para>
